<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Backend</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    {% include 'AppBundle::fonts.html.twig' %}
    {% stylesheets filter='uglifycss' output='assets/css/appbundle-primary-*.css'
        '@AppBundle/Resources/public/libs/bootstrap/bootstrap.min.css'
        '@AppBundle/Resources/public/libs/font-awesome/font-awesome.min.css'
        '@AppBundle/Resources/public/css/frontend.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
</head>
<body>
    {% block whitepage %}
        {% include "AppBundle::alert.html.twig" %}
        {% block content %}{% endblock %}
    {% endblock %}
</body>

<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>

{% if app.environment == 'dev' %}
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% else %}
    <script src="{{ asset('assets/js/fos_js_routes.js') }}"></script>
{% endif %}

{% javascripts filter='uglifyjs2' output='assets/js/appbundle-*.js'
    '@AppBundle/Resources/public/libs/jquery/jquery-3.1.1.min.js'
    '@AppBundle/Resources/public/libs/bootstrap/bootstrap.min.js'
    '@AppBundle/Resources/public/js/frontend.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
</html>
